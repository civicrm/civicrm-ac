{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tasks</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Subtype</th>
                <th>External id</th>
                <th>Date</th>
                <th>Url</th>
                <th>Description</th>
                <th>Identifier string</th>
                <th>Identifier type</th>
                <th>Contributor</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td><a href="{{ path('task_view', { 'id': task.id }) }}">{{ task.id }}</a></td>
                <td>{{ task.type }}</td>
                <td>{{ task.subtype }}</td>
                <td>{{ task.externalIdentifier }}</td>
                <td>{% if task.date %}{{ task.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ task.url }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.identifierString }}</td>
                <td>{{ task.identifierType }}</td>
                {% if task.identifier.contributor.name is defined %}
                    <td>
                        <a href="{{ path('contributor_view', { 'contactId': task.identifier.contributor.contactId }) }}">
                            {{ task.identifier.contributor.name }}
                        </a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
